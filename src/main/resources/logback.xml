<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} -
				%msg%n</pattern>
		</encoder>
	</appender>
	<!-- show only logs from application main package -->
	<logger name="fr.xebia.mower" level="debug">
		<appender-ref ref="STDOUT" />
	</logger>
</configuration>